{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
      "all": true,
      "suspicious": {
        "noEmptyInterface": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
		}
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentSize": 2,
    "indentStyle": "tab",
    "lineWidth": 120
  }
}