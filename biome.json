{
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"useImportRestrictions": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "off",
				"useExportType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"globals": [
			"Discord",
			"Logos",
			"Events",
			"WithRequired",
			"constants",
			"defaults"
		]
	}
}
